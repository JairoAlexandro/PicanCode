<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}PicanCode{% endblock %}</title>

    {% block stylesheets %}
      {{ encore_entry_link_tags('app') }}
    {% endblock %}
  </head>

  <body class="bg-[#1C1C1C] text-white font-sans antialiased">
    <nav class="bg-[#000000] shadow-md">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <a href="{{ path('post_index') }}" class="text-2xl font-bold">
            Pican<span class="text-red-500">Code</span>
          </a>
          <div class="space-x-4">
            {% if app.user %}
              <a href="{{ path('post_new') }}" class="px-4 py-2 rounded-full bg-blue-600 hover:bg-blue-700 transition">
                Nuevo Post
              </a>
              <a href="{{ path('user_profile', {'id': app.user.id}) }}" class="px-4 py-2 rounded-full bg-blue-600 hover:bg-blue-700 transition">
                Mi Perfil
              </a>
              <a href="{{ path('app_logout') }}" class="px-4 py-2 rounded-full bg-red-600 hover:bg-red-700 transition">
                Cerrar Sesión
              </a>
            {% else %}
              <a href="{{ path('app_login') }}" class="px-4 py-2 rounded-full bg-blue-600 hover:bg-blue-700 transition">
                Iniciar Sesión
              </a>
            {% endif %}
          </div>
        </div>
      </div>
    </nav>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="space-y-4">
        {% for label, messages in app.flashes %}
          {% for message in messages %}
            <div class="p-4 rounded-md text-sm
              {% if label == 'success' %}bg-green-600 bg-opacity-10 text-green-400{% endif %}
              {% if label == 'error'   %}bg-red-600 bg-opacity-10 text-red-400{% endif %}
              {% if label == 'warning' %}bg-yellow-500 bg-opacity-10 text-yellow-400{% endif %}">
              {{ message }}
            </div>
          {% endfor %}
        {% endfor %}
      </div>

      {% block body %}{% endblock %}
    </div>

    {% block javascripts %}
      {{ encore_entry_script_tags('app') }}
    {% endblock %}
  </body>
</html>
