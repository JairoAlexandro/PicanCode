{# templates/user/profile.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Perfil de {{ user.username }}{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <style>
    .profile-container {
      max-width: 1100px;
      margin: 2.5rem auto;
      background: #232323;
      padding: 2.5rem 2rem;
      border-radius: 1rem;
      box-shadow: 0 2px 8px #0002;
    }
    .profile-header {
      margin-bottom: 2rem;
      text-align: center;
    }
    .profile-title {
      font-size: 2.2rem;
      font-weight: bold;
      color: #fff;
      margin-bottom: 0.5rem;
    }
    .profile-info {
      color: #eee;
      font-size: 1.1rem;
      margin-bottom: 0.5rem;
    }
    .profile-avatar, .default-avatar {
      width: 120px;
      height: 120px;
      border-radius: 50%;
      margin: 0 auto 1rem;
      box-shadow: 0 2px 8px #0004;
      object-fit: cover;
    }
    .default-avatar {
      display: flex;
      align-items: center;
      justify-content: center;
      background: #444;
      color: #aaa;
      font-size: 3rem;
    }
    .follow-form {
      margin: 1rem 0;
      text-align: center;
    }
    .follow-form button {
      padding: 0.5rem 1rem;
      border-radius: 0.4rem;
      font-weight: bold;
      border: none;
      cursor: pointer;
      transition: background 0.2s, color 0.2s;
    }
    .btn-view { background: #3498db; color: #fff; }
    .btn-view:hover { background: #217dbb; }
    .btn-unfollow { background: #e74c3c; color: #fff; }
    .btn-unfollow:hover { background: #c0392b; }
    .profile-divider {
      border: none;
      border-top: 2px solid #fff2;
      margin: 2rem 0 1.5rem;
    }
    .posts-title {
      color: #fff;
      font-size: 1.4rem;
      font-weight: bold;
      margin-bottom: 1.5rem;
      text-align: center;
    }
    .posts-list {
      display: flex;
      flex-wrap: wrap;
      gap: 2rem;
      justify-content: center;
    }
    .post-card {
      background: #232323;
      padding: 1.2rem;
      border-radius: 1rem;
      max-width: 300px;
      flex: 1 1 260px;
      box-shadow: 0 2px 8px #0002;
      display: flex;
      flex-direction: column;
      align-items: center;
    }
    .post-card h4 {
      color: #fff;
      font-size: 1.1rem;
      font-weight: bold;
      margin-bottom: 0.7rem;
      text-align: center;
    }
    .post-card img {
      max-width: 100%;
      border-radius: 0.7rem;
      margin-bottom: 0.7rem;
      box-shadow: 0 1px 4px #0003;
    }
    .post-card p {
      color: #eee;
      font-size: 1rem;
      margin-bottom: 0.7rem;
      text-align: center;
    }
    .post-likes {
      color: #e74c3c;
      font-weight: bold;
      margin-bottom: 0.7rem;
    }
    .post-actions {
      margin-top: auto;
    }
    .post-actions .btn-view {
      display: inline-block;
      padding: 0.4rem 1rem;
      text-decoration: none;
      font-size: 0.9rem;
    }
  </style>
{% endblock %}

{% block body %}
  <div class="profile-container">

    {% set is_following = false %}
    {% if app.user and app.user.id != user.id %}
      {% for f in app.user.following %}
        {% if f.followed.id == user.id %}
          {% set is_following = true %}
        {% endif %}
      {% endfor %}
    {% endif %}

    <div class="profile-header">
      <div class="profile-title">{{ user.username }}</div>
      <div class="profile-info"><strong>Email:</strong> {{ user.email }}</div>
      <div class="profile-info"><strong>Siguiendo:</strong> {{ user.following|length }}</div>
      <div class="profile-info"><strong>Seguidores:</strong> {{ user.followers|length }}</div>

      {% if user.avatar %}
        <img src="/uploads/avatars/{{ user.avatar }}"
             alt="Avatar de {{ user.username }}"
             class="profile-avatar">
      {% else %}
        <div class="default-avatar">
          <i class="fas fa-user"></i>
        </div>
      {% endif %}

      {% if app.user and app.user.id == user.id %}
        <a href="{{ path('user_edit_profile', {id: user.id}) }}"
           class="btn btn-secondary"
           style="display:block; text-align:center; margin:1rem auto;">
          ðŸ–‰ Editar perfil
        </a>
      {% endif %}

      {% if user.bio %}
        <div class="profile-bio"><strong>Bio:</strong> {{ user.bio }}</div>
      {% endif %}
      <div class="profile-info"><strong>Miembro desde:</strong> {{ user.createdAt|date('d/m/Y') }}</div>

      {% if app.user and app.user.id != user.id %}
        <form action="{{ path('user_follow', {id: user.id}) }}"
              method="post"
              class="follow-form"
              onsubmit="{% if is_following %}return confirm('Â¿Dejar de seguir a {{ user.username }}?');{% endif %}">
          <input type="hidden"
                 name="_token"
                 value="{{ csrf_token((is_following ? 'unfollow' : 'follow') ~ user.id) }}">
          <button type="submit" class="{{ is_following ? 'btn-unfollow' : 'btn-view' }}">
            {{ is_following ? 'Siguiendo' : 'Seguir' }}
          </button>
        </form>
      {% endif %}
    </div>

    <hr class="profile-divider">

    <div class="posts-title">Mis publicaciones</div>
    <div class="posts-list">
      {% for post in user.getPosts %}
        <div class="post-card">
          <h4>{{ post.title }}</h4>
          {% if post.media %}
            <img src="/uploads/posts/{{ post.media }}" alt="Imagen del post">
          {% endif %}
          <p>{{ post.content|slice(0,100) }}{% if post.content|length > 100 %}...{% endif %}</p>
          <div class="post-likes">â™¥ {{ post.likes|length }} Me gusta</div>
          <div class="post-actions">
            <a href="{{ path('post_show', {id: post.id}) }}"
               class="btn-action btn-view">Ver</a>
          </div>
        </div>
      {% else %}
        <p style="color:#aaa;">No has publicado nada aÃºn.</p>
      {% endfor %}
    </div>
  </div>
{% endblock %}
