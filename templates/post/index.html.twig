{# templates/post/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}
  {{ view == 'following' ? 'Publicaciones de seguido' : 'Publicaciones recientes' }}
{% endblock %}

{% block stylesheets %}
<style>
  .posts-section { padding: 2rem 0; }

  /* Toggle buttons */
  .posts-toggle {
    text-align: center;
    margin-bottom: 2rem;
  }
  .btn-toggle {
    display: inline-block;
    margin: 0 .5rem;
    padding: .6rem 1.2rem;
    border-radius: .5rem;
    background: #3b3b3b;
    color: #fff;
    text-decoration: none;
    font-weight: bold;
    transition: background .2s;
  }
  .btn-toggle.active {
    background: #3498db;
  }
  .btn-toggle:hover {
    background: #217dbb;
  }

  .posts-title {
    color: #fff;
    font-size: 1.8rem;
    text-align: center;
    margin-bottom: 1rem;
  }
  .posts-list {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
    justify-content: center;
  }
  .post-card {
    background: #232323;
    padding: 1rem;
    border-radius: 1rem;
    max-width: 350px;
    flex: 1 1 350px;
    box-shadow: 0 2px 8px #0002;
    display: flex;
    flex-direction: column;
  }
  .post-image img {
    max-width: 100%;
    border-radius: .5rem;
    margin-bottom: .7rem;
  }
  .post-content { flex: 1; }
  .post-title a {
    color: #fff; text-decoration: none;
    font-size: 1.3rem; margin-bottom: .5rem;
    display: inline-block;
  }
  .post-meta {
    color: #aaa; font-size: .9em; margin: .3rem 0 .7rem;
  }
  .post-snippet {
    color: #eee; font-size: 1rem; margin-bottom: 1rem;
  }
  .post-footer {
    display: flex; justify-content: space-between;
    align-items: center; margin-top: auto;
  }
  .post-likes {
    color: #e74c3c; font-weight: bold;
  }
  .btn-action.btn-view {
    padding: .4rem 1rem; border-radius: .5rem;
    background: #3498db; color: #fff;
    text-decoration: none; font-size: .9rem;
    transition: background .2s;
  }
  .btn-action.btn-view:hover { background: #217dbb; }
  .no-posts {
    color: #aaa; text-align: center;
    font-size: 1rem; margin-top: 2rem;
  }
</style>
{% endblock %}

{% block body %}
  <section class="posts-section">
    {# ——— Toggle entre vistas ——— #}
    <div class="posts-toggle">
      <a href="{{ path('post_index', { view: 'recent' }) }}"
         class="btn-toggle {{ view == 'recent'   ? 'active' }}">
        Recientes
      </a>
      <a href="{{ path('post_index', { view: 'following' }) }}"
         class="btn-toggle {{ view == 'following' ? 'active' }}">
        Siguiendo
      </a>
    </div>
    {# ———————————————— #}

    <h2 class="posts-title">
      {{ view == 'following'
         ? 'Publicaciones de a quienes sigues'
         : 'Publicaciones recientes' }}
    </h2>

    <div class="posts-list">
      {% for post in posts %}
        <article class="post-card">
          {% if post.media %}
            <div class="post-image">
              <img src="/uploads/posts/{{ post.media }}" alt="{{ post.title }}">
            </div>
          {% endif %}
          <div class="post-content">
            <h3 class="post-title">
              <a href="{{ path('post_show',{id:post.id}) }}">
                {{ post.title }}
              </a>
            </h3>
            <p class="post-meta">
              Por
              <a href="{{ path('user_profile',{id:post.user.id}) }}">
                {{ post.user.username }}
              </a>
              · {{ post.createdAt|date('d/m/Y') }}
            </p>
            <p class="post-snippet">
              {{ post.content|slice(0,150) }}
              {% if post.content|length > 150 %}...{% endif %}
            </p>
          </div>
          <footer class="post-footer">
            <span class="post-likes">♥ {{ post.likes|length }} Me gusta</span>
            <div class="post-actions">
              <a href="{{ path('post_show',{id:post.id}) }}"
                 class="btn-action btn-view">Ver</a>
            </div>
          </footer>
        </article>
      {% else %}
        <p class="no-posts">No hay publicaciones para mostrar.</p>
      {% endfor %}
    </div>
  </section>
{% endblock %}
