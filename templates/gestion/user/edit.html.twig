{% extends 'gestion/base.html.twig' %}

{% block title %}Editar Usuario #{{ user.id }}{% endblock %}

{% block body %}
  <div class="flex items-center justify-center py-12 px-4">
    <div class="w-full max-w-md bg-gray-800 rounded-xl shadow-lg p-6 md:p-8">
      <h1 class="text-2xl font-bold text-white text-center mb-6">
        Editar Usuario #{{ user.id }}
      </h1>

      {{ form_start(form, {
          action: path('gestion_user_edit', { id: user.id }),
          method: 'POST',
          attr: {'class': 'space-y-5'}
      }) }}

        {{ form_errors(form) }} {# para ver errores de validación #}

        <div>
          {{ form_label(form.username, null, {
              label_attr: {'class': 'block text-gray-300 font-semibold mb-1'}
          }) }}
          {{ form_widget(form.username, {
              attr: {
                class: 'w-full bg-gray-700 border border-gray-600 rounded-md text-gray-200 px-4 py-2 focus:outline-none focus:ring-2 focus:ring-green-500',
                placeholder: 'Nombre de usuario'
              }
          }) }}
          {{ form_errors(form.username) }}
        </div>

        <div>
          {{ form_label(form.email, null, {
              label_attr: {'class': 'block text-gray-300 font-semibold mb-1'}
          }) }}
          {{ form_widget(form.email, {
              attr: {
                class: 'w-full bg-gray-700 border border-gray-600 rounded-md text-gray-200 px-4 py-2 focus:outline-none focus:ring-2 focus:ring-green-500',
                placeholder: 'Correo electrónico'
              }
          }) }}
          {{ form_errors(form.email) }}
        </div>

        <div>
          <button
            type="submit"
            class="w-full bg-gradient-to-br from-green-500 to-green-400 hover:from-green-600 hover:to-green-500 text-white font-bold py-3 rounded-lg shadow-md hover:shadow-lg transition-transform transform hover:-translate-y-1 cursor-pointer focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2"
          >
            Guardar cambios
          </button>
        </div>

      {{ form_end(form) }}
    </div>
  </div>
{% endblock %}
