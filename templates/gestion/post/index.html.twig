    {# â€”â€”â€”â€”â€” Contenedor de la tabla â€”â€”â€”â€”â€” #}
    <div class="overflow-x-auto">
      <table class="min-w-full bg-gray-800 rounded-xl overflow-hidden">
        <thead class="bg-gray-700">
          <tr>
            <th class="px-5 py-3 text-left text-sm font-medium text-gray-100">ID</th>
            <th class="px-5 py-3 text-left text-sm font-medium text-gray-100">TÃ­tulo</th>
