          <input
            id="title_filter"
            type="text"
            name="title"
            placeholder="Buscar por tÃ­tulo..."
            value="{{ title_filter }}"
            class="w-full bg-gray-700 border border-gray-600 rounded-lg px-3 py-2 text-gray-200 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-green-500"
          />
        </div>

        <div class="w-full sm:w-auto">
          <button
            type="submit"
            class="w-full bg-green-500 hover:bg-green-600 text-white font-semibold px-5 py-2 rounded-lg transition shadow-md"
