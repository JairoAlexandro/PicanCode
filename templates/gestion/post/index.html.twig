{% block body %}
  <div class="space-y-6">
    {# â€”â€”â€”â€”â€” Contenedor de filtro â€”â€”â€”â€”â€” #}
    <div class="bg-gray-800 rounded-xl p-4 shadow-sm">
      <form method="get" class="flex flex-col sm:flex-row gap-4 items-center">
        <div class="flex-1 min-w-[90px]">
