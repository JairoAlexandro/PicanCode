{% extends 'base.html.twig' %}

{% block title %}Acceso Gestión{% endblock %}

{% block stylesheets %}
  {{ parent() }}
{% endblock %}

{% block body %}
  <div class="flex flex-col h-full overflow-hidden">
    <div class="flex-grow flex items-center justify-center px-4 py-12">
      <div class="w-full max-w-md bg-gray-800 p-8 rounded-2xl shadow-lg mt-8">
        <h1 class="text-4xl font-extrabold text-center mb-6 text-white">
          Área de <span class="text-red-500">Gestión</span>
        </h1>

        {% if error %}
          <div class="bg-red-500/10 text-red-300 p-3 rounded-md text-sm mb-4">
            {{ error.messageKey|trans(error.messageData, 'security') }}
          </div>
        {% endif %}

        <form action="{{ path('gestion_login') }}" method="post" class="space-y-4">
          <div>
            <label for="username" class="block text-sm font-medium mb-1 text-white">
              Usuario
            </label>
            <input
              id="username"
              name="_username"
              value="{{ last_username }}"
              required
              autofocus
              placeholder="Usuario"
              class="w-full px-4 py-2 bg-gray-700 rounded-full text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-red-500"
            />
          </div>

          <div>
            <label for="password" class="block text-sm font-medium mb-1 text-white">
              Contraseña
            </label>
            <input
              type="password"
              id="password"
              name="_password"
              required
              placeholder="••••••••"
              class="w-full px-4 py-2 bg-gray-700 rounded-full text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-red-500"
            />
          </div>

          <button
            type="submit"
            class="w-full py-3 bg-red-500 hover:bg-red-600 rounded-full font-semibold text-lg text-white transition"
          >
            Entrar Gestión
          </button>
        </form>
      </div>
    </div>
  </div>
{% endblock %}
