{% extends 'base.html.twig' %}

{% block title %}Login – PicanCode{% endblock %}

{% block stylesheets %}
  {{ parent() }}
{% endblock %}

{% block body %}
  <div class="flex flex-col h-full overflow-hidden">
    <div class="flex-grow flex items-center justify-center px-4 py-12">
      <div class="w-full max-w-md bg-gray-800 p-8 rounded-2xl shadow-lg mt-8">
        <h1 class="text-4xl font-extrabold text-center mb-6">
          Pican<span class="text-red-500">Code</span>
        </h1>
        <form action="{{ path('app_login') }}" method="post" class="space-y-4">
          {% if error %}
            <div class="bg-red-500/10 text-red-300 p-3 rounded-md text-sm">
              {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
          {% endif %}

          <div>
            <label for="username" class="block text-sm font-medium mb-1 text-white">
              Usuario
            </label>
            <input
              id="username"
              name="_username"
              value="{{ last_username }}"
              required autofocus
              placeholder="Usuario"
              class="w-full px-4 py-2 bg-gray-700 rounded-full text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-red-500"
            />
          </div>

          <div>
            <label for="password" class="block text-sm font-medium mb-1 text-white">
              Contraseña
            </label>
            <input
              type="password"
              id="password"
              name="_password"
              required
              placeholder="••••••••"
              class="w-full px-4 py-2 bg-gray-700 rounded-full text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-red-500"
            />
          </div>

          <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

          <button
            type="submit"
            class="w-full py-3 bg-red-500 hover:bg-red-600 rounded-full font-semibold text-lg transition cursor-pointer text-white focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2"
          >
            Iniciar Sesión
          </button>
        </form>

        <p class="text-center text-sm text-gray-400 mt-4">
          ¿No tienes cuenta?
          <a href="{{ path('app_register') }}" class="text-red-500 hover:underline">
            Regístrate aquí
          </a>
        </p>
      </div>
    </div>
  </div>
{% endblock %}
